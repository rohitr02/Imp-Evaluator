int n;
int reverse;
int reverse2;
int temp;
int res;
int res2;

n := 123454321;
reverse := 0;
temp := n;

while (~(temp = 0)) {
    reverse := (reverse * 10) + (temp % 10);
    temp    := temp / 10;
}

if (n = reverse)
    res := 1
else
    res := 0;

